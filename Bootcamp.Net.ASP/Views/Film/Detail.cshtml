*@
@{
    ViewData["Title"] = Model.Titre;
    decimal prixTicket = (decimal)ViewData["PrixTicket"];
    decimal prixDVD = ViewBag.PrixDVD;
} 


<h1>@Model.Titre (Année de sortie : @Model.AnneeSortie)</h1>
<hr />

<h3>Prix Ticket : @prixTicket €</h3>
<h3>Prix DVD : @prixDVD €</h3>
<h3>Genre : @Model.Genre</h3><br />
<h3>Réalisateur : @Model.Realisateur.Prenom @Model.Realisateur.Nom</h3><br />
<h3>Acteurs : </h3>
<hr />
<ul>
    @foreach (FilmPersonne acteur in @Model.Acteurs)
    {
        <li>@acteur.Personne.Prenom @acteur.Personne.Nom</li>
    }
</ul>

